<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/background" />

            <padding android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
            <gradient
                android:type="linear"
                android:startColor="#C70039"
                android:centerColor="#F59188"
                android:endColor="#FFFFFF"
                android:angle="90"/>
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>

</layer-list>